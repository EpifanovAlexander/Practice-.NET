@model IEnumerable<WorkWithASP.Models.UsersModel>

@{
    ViewData["Title"] = "Users Index";
}

<h1>All Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rewards)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Birthdate)
            </td>
            <td>
                @if (user.Rewards != null)
                    @foreach (var reward in user.Rewards)
                    {
                        <p>@Html.DisplayFor(modelItem => reward.Title)</p>
                    }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = user.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = user.Id }) |
            </td>
        </tr>
        }
    </tbody>
</table>